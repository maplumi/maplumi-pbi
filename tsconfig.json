{
  "compilerOptions": {
    "target": "es2022",
    "moduleResolution": "node",
    "outDir": "./.tmp/build/",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["es2022", "dom"],
    "allowJs": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "files": [
    "src/visual.ts"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "dist",
    ".tmp"
  ]
}
